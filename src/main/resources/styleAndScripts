<script type="text/javascript">
jQuery(document).ready(function(){jQuery(".participants .head").click(function(e){e.preventDefault();var me=jQuery(this).find("i.fa-chevron-circle-up, i.fa-chevron-circle-down");if(me.hasClass("fa-chevron-circle-down")){me.removeClass("fa-chevron-circle-down");me.addClass("fa-chevron-circle-up")}else{me.removeClass("fa-chevron-circle-up");me.addClass("fa-chevron-circle-down")};me.parent().siblings(".body").slideToggle()})})
</script>
<style>
	div.participants a {color: #fff; line-height: 20px; display: inline-block }
	div.participants img { margin-bottom: 0px; }
	div.participants div.head { background-color: #3cade7; padding: 5px; cursor: pointer; position: relative; }
	div.participants div.head img { border-radius: 3px; }
	div.participants div.head span { padding: 0px 35px 0px 15px; font-size: 22px; color: #fff; }
	div.participants div.head i { color: #fff; font-size: 36px; position: absolute; right: 8px; }
	div.participants div.body { background-color: #263659; width: 100%; display: none; }
	div.participants div.body div.contestant { width: 14%; min-width: 110px; height: 160px; overflow:hidden; padding: 10px 1%; text-align: center; color: #fff; float: left;}
	div.participants div.body div img { border: 3px solid #fff; }
	div.participants div.body div span { font-size: 14px; }
	.clear { clear:both; visibility:hidden; }
	@media screen and (max-width: 1190px) {
		div.participants div.body div.contestant { height: 175px; }
	}
	@media screen and (max-width: 480px) {
		div.participants div.head span { padding-left: 10px; font-size: 16px; position: relative; top: 3px; }
	}
</style>